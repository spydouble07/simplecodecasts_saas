<div class ="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <% if params[:plan]== '2' %>
      <h1>Pro Account</h2>
      <h4>Sign up for the pro account for $10/month and get access to the community and contact information!</h4>
    <% else %>
      <h1>Basic Account</h2>
      <h4>Sign up for free and get access to the community.</h4>
    <% end  %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Sign up</h2>
      
      <% if params[:plan] == '2' %>
        <%= render "pro_form" %>
      <% else %>  
        <%= render "basic_form" %>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>